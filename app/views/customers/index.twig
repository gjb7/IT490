{% extends "_layout.twig" %}

{% block title %}Customers{% endblock %}

{% block content %}
			<div class="clearfix">
				<div class="pull-left">
					{{ link_to_action('CustomersController@create', 'New Customer', {}, {'class': 'btn btn-primary'}) }}
				</div>
			</div>
			
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
					</tr>
				</thead>
				<tbody>
					{% for customer in customers %}
					<tr>
						<td>{{ link_to_action('CustomersController@edit', customer.name, {'id': customer.id}) }}</td>
					</tr>
					{% else %}
					<tr>
						<td>No customers.</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
{% endblock %}